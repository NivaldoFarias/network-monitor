{
  "name": "network-monitor",
  "version": "0.0.1",
  "description": "A lightweight network monitor that runs as a systemd service and stores results in SQLite",
  "type": "module",
  "scripts": {
    "start:monitor": "bun run dist/monitor.js",
    "dev:monitor": "bun run --watch bin/monitor.ts",
    "build:monitor": "bun build bin/monitor.ts --outfile dist/monitor.js --minify --target bun",
    "start:setup": "bun run dist/setup.js",
    "dev:setup": "bun run --watch bin/setup.ts",
    "build:setup": "bun build bin/setup.ts --outfile dist/setup.js --minify --target bun"
  },
  "bin": {
    "network-monitor": "bun run bin/monitor.ts",
    "setup-systemd": "bun run bin/setup.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}